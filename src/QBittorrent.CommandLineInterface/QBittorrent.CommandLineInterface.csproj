<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.0;netframework4.6.1</TargetFrameworks>
    <AssemblyName>qbt</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'netframework4.6.1'">
    <TargetFrameworkIdentifier>.NETFramework</TargetFrameworkIdentifier>
  </PropertyGroup>

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <Authors>Pavel Fedarovich</Authors>
    <Company>Pavel Fedarovich</Company>
    <Version>0.1.0.0</Version>
    <Copyright>Â© Pavel Fedarovich, 2018</Copyright>
    <PackageProjectUrl>https://github.com/fedarovich/qbittorrent-cli</PackageProjectUrl>
    <RepositoryUrl>https://github.com/fedarovich/qbittorrent-cli</RepositoryUrl>
    <PackageTags>torrent qbittorrent</PackageTags>
    <PackageLicenseUrl>https://github.com/fedarovich/qbittorrent-cli/blob/master/LICENSE</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.1.1" />
    <PackageReference Include="Mono.Posix.NETStandard" Version="1.0.0-beta3" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.1" />
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\QBittorrent.Client\QBittorrent.Client.csproj" />
  </ItemGroup>

  <Target Name="IncludeRunScripts" AfterTargets="ComputeFilesToPublish" Condition="'$(RuntimeIdentifier)' == ''">
    <ItemGroup>
      <ResolvedFileToPublish Include="qbt.cmd" RelativePath="qbt.cmd" />
      <ResolvedFileToPublish Include="qbt.sh" RelativePath="qbt" />
    </ItemGroup>
  </Target>
</Project>
