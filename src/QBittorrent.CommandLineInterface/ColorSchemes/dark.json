    "status-info": {
      "bg": "system-bg",
      "fg": "blue",
      "fg-alt": "dark-blue"
    },
    "status-warning": {
      "bg": "system-bg",
      "fg": "yellow",
      "fg-alt": "dark-yellow"
    },
    "status-critical": {
      "bg": "system-bg",
      "fg": "dark-red",
      "fg-alt": "red"
    },
    "timestamp": {
      "bg": "system-bg",
      "fg": "white",
      "fg-alt": "dark-gray"
    },
    "message": {
      "bg": "system-bg",
      "fg": "gray",
      "fg-alt": "dark-gray"
