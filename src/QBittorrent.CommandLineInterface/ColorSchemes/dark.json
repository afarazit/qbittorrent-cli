{
  "$schema": "../Schemas/colors-schema.json",

  "normal": {
    "bg": "system-bg",
    "fg": "system-fg"
  },

  "strong": {
    "bg": "system-bg",
    "fg": "yellow",
    "fg-alt": "dark-blue"
  },

  "warning": {
    "bg": "system-bg",
    "fg": "yellow",
    "fg-alt": "dark-yellow"
  },

  "active": {
    "bg": "system-bg",
    "fg": "green",
    "fg-alt": "dark-cyan"
  },

  "inactive": {
    "bg": "system-bg",
    "fg": "dark-gray",
    "fg-alt": "gray"
  },

  "log": {
